/* Necrotech Frontier - Styles */

html, body {
  margin: 0;
  padding: 0;
  background: #000;
  overflow: hidden;
  width: 100vw;
  height: 100vh;
  touch-action: none;
  display: flex;
  justify-content: center;
  align-items: center;
  -webkit-user-select: none;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

#gameContainer {
  position: relative;
  width: 360px;
  height: 600px;
  max-width: 100vw;
  max-height: 100vh;
  margin: auto;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
  background: #000;
}

/* Responsive scaling */
@media (max-width: 360px) {
  #gameContainer {
    width: 100vw;
    height: calc(100vw * 600 / 360);
    max-height: 100vh;
  }
}

@media (max-height: 600px) {
  #gameContainer {
    height: 100vh;
    width: calc(100vh * 360 / 600);
    max-width: 100vw;
  }
}

canvas {
  display: block;
  width: 100%;
  height: 100%;
  background: url('https://i.postimg.cc/sxFG4vpg/Chat-GPT-Image-Jun-19-2025-10-02-25-AM.png') center center / cover no-repeat;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
}

/* HUD - AAA Modern Design */
#hud {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
  pointer-events: none;
}

/* Top Bar Container */
.hud-top {
  display: flex;
  flex-direction: column;
  gap: 4px;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.85) 0%, rgba(10, 10, 20, 0.75) 50%, rgba(0, 0, 0, 0.6) 100%);
  border-bottom: 2px solid rgba(255, 255, 255, 0.2);
  padding: 5px 12px;
  backdrop-filter: blur(8px);
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.hud-top::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: shimmer 4s infinite;
  z-index: 1;
}

.hud-top::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.08) 50%, transparent 70%);
  animation: glossShine 5s infinite;
  pointer-events: none;
  z-index: 1;
}

.hud-top > * {
  position: relative;
  z-index: 2;
}

/* Row 1: Stats Row - 4 equal cards */
.hud-stats-row {
  display: flex;
  gap: 5px;
  width: 100%;
}

.hud-stat-card {
  flex: 1;
  background: linear-gradient(135deg, rgba(20, 20, 30, 0.85) 0%, rgba(10, 10, 20, 0.85) 100%);
  border: 1.5px solid rgba(255, 255, 255, 0.15);
  border-radius: 7px;
  padding: 4px 6px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4),
              inset 0 1px 0 rgba(255, 255, 255, 0.08);
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 5px;
  transition: box-shadow 0.3s ease, filter 0.3s ease;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  min-width: 0;
}

/* Rank card - triple width */
.rank-card {
  flex: 3;
  min-width: 0;
  max-width: none;
}

